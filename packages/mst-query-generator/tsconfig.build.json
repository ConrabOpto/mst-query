{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react",
        "lib": ["ESNext", "dom"],
        "declaration": true,
        "skipLibCheck": true,
        "strict": false,
        "noImplicitAny": false,
        "alwaysStrict": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src", "./generator"]
}
