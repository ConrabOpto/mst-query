{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "jsx": "react",
        "lib": ["ESNext", "dom"],
        "declaration": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "moduleResolution": "Bundler",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "allowJs": true,
    },
    "include": ["./src", "./tests"]
}
